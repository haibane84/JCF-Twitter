<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC '-//ibatis.apache.org//DTD SQL Map 2.0//EN' 'http://ibatis.apache.org/dtd/sql-map-2.dtd'>

<sqlMap namespace="pic">

<statement id="select" resultClass="jcf.edu.twitter_user_pic.model.PicVO">
	select * from twitter_user_pic
</statement>

<statement id="find" parameterClass="java.util.Map"	resultClass="jcf.edu.twitter_user_pic.model.PicVO">
	select * from twitter_user_pic
	<dynamic prepend="where">
		<isNotEmpty property="userId" prepend="and">
			user_id= #userId#
		</isNotEmpty>
	</dynamic>
</statement>

<insert id="insert" parameterClass="jcf.edu.twitter_user_pic.model.PicVO">

  INSERT INTO twitter_user_pic
  (
  file_uuid,file_name,file_path,user_id
  )
  VALUES(
  #fileUuid#,#fileName#,#filePath#,#userId#
  )

</insert>

<delete id="delete" parameterClass="jcf.edu.twitter_user_pic.model.PicVO">

  DELETE FROM twitter_user_pic where user_id = #userId#

</delete>

</sqlMap>