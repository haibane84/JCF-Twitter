<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC '-//ibatis.apache.org//DTD SQL Map 2.0//EN' 'http://ibatis.apache.org/dtd/sql-map-2.dtd'>
<sqlMap namespace="following">

	<insert id="insert" parameterClass="jcf.edu.user.model.FollowingVO">
		insert into twitter_user_following values(
		#userId#,
		#followingId#
		)

	</insert>
	
	<statement id="delete" parameterClass="jcf.edu.user.model.FollowingVO">
		delete from twitter_user_following where user_Id=#userId# and following_Id=#followingId#		
	</statement>
	
	<statement id="find" parameterClass="jcf.edu.user.model.FollowingVO"
		resultClass="jcf.edu.user.model.FollowingVO">

		select * from twitter_user_following 

		<dynamic prepend="where">

			<isNotEmpty property="userId" prepend="and">
				user_Id=#userId#
			</isNotEmpty>
		</dynamic>
	</statement>
	
</sqlMap>